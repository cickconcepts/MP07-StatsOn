<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JugadorStatsFragment"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:layout_marginTop="35dp"
            android:padding="16dp"
            android:orientation="vertical">

            <!--encabezado-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:orientation="horizontal">
                <!--foto a la derecha-->
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/recyclerv_round_white">

                    <ImageView android:id="@+id/imagen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/add_jugador"
                        android:scaleType="fitStart"
                        android:textAlignment="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/nombreJugador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/postnobillsjaffna_medium"
                        android:text="@string/jugadorNombre"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:lineSpacingMultiplier="0.6"
                        android:textColor="@color/white"
                        android:textSize="42sp" />

                    <TextView android:id="@+id/dorsalJugador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/postnobillsjaffna_extrabold"
                        android:text="@string/jugadorDorsal"
                        android:textSize="42sp"
                        android:gravity="end|bottom"
                        android:paddingEnd="10dp"
                        android:paddingTop="55dp"/>
                </RelativeLayout>
            </LinearLayout>

            <!--STATS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/recyclerv_round_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/puntosporpartido"
                    android:textAllCaps="true"
                    android:textColor="@color/reddark"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
                <org.eazegraph.lib.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:padding="10dp"
                    app:egFixedBarWidth="true"
                    app:egBarWidth="20dp"
                    app:egLegendHeight="40dp"
                    app:egEnableScroll="true"
                    app:egLegendColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/recyclerv_round_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tirosIntentadosPorPartido"
                    android:textAllCaps="true"
                    android:textColor="@color/reddark"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <org.eazegraph.lib.charts.PieChart
                        android:id="@+id/piechart"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:paddingTop="15sp"
                        android:paddingBottom="15sp"
                        app:egLegendTextSize="15sp"
                        app:egValueTextSize="20sp"
                        app:egUsePieRotation="true"
                        app:barrierDirection="right"
                        app:egAutoCenter="true"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/piechart2"/>
                    <org.eazegraph.lib.charts.PieChart
                        android:id="@+id/piechart2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:paddingTop="15sp"
                        android:paddingBottom="15sp"
                        app:egLegendTextSize="15sp"
                        app:egValueTextSize="20sp"
                        app:egUsePieRotation="true"
                        app:barrierDirection="right"
                        app:egAutoCenter="true"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/piechart"
                        app:layout_constraintRight_toLeftOf="@id/piechart3"/>
                    <org.eazegraph.lib.charts.PieChart
                        android:id="@+id/piechart3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:paddingTop="15sp"
                        android:paddingBottom="15sp"
                        app:egLegendTextSize="15sp"
                        app:egValueTextSize="20sp"
                        app:egUsePieRotation="true"
                        app:barrierDirection="right"
                        app:egAutoCenter="true"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/piechart2"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:minHeight="50dp">

        <ImageButton
            android:id="@+id/botonComeBackSeeTM"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@color/black"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageButton android:id="@+id/botonEditTM"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:paddingStart="25dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:layout_marginEnd="40dp"
            android:src="@drawable/editar" />


    </LinearLayout>
</RelativeLayout>




