<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Load2Fragment"
    android:background="@color/background">


    <ImageView android:id="@+id/logoenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:rotationX="70"
        android:src="@drawable/logito"
        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@+id/goCBSCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView  android:id="@+id/goCBSCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="95dp"
        android:fontFamily="@font/postnobillsjaffna_extrabold"
        android:rotationX="-54"
        android:text="@string/goCBSCcarga"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="75sp"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoenter" />

</androidx.constraintlayout.widget.ConstraintLayout>