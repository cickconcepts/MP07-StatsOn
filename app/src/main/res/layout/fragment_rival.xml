<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RivalFragment"
    android:background="@color/background"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tituloRival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/e_rival"
        android:fontFamily="@font/postnobillsjaffna_extrabold"
        android:textSize="75sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_marginBottom="180dp"
        android:textColor="@color/white"/>
    <!--TODO: font family
    android:fontFamily="" -->

    <EditText
        android:id="@+id/nombreRival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="@string/nombrerival"
        android:background="@drawable/textedit_round"/>

</LinearLayout>