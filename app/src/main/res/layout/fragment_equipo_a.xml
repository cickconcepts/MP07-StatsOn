<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EquipoAFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/postnobillsjaffna_extrabold"
            android:text="@string/santaColoma"
            android:background="@drawable/title_backgroud"
            android:textColor="@color/white"
            android:textSize="70sp"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView android:id="@+id/listaJugadoresTeamA"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="50dp">

        <ImageButton
            android:id="@+id/botonComeBackTeamA"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@color/black"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <Button android:id="@+id/botonSiguienteTeamA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/siguiente"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>
</RelativeLayout>