<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".EquipoAFragment"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_marginTop="35dp"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/postnobillsjaffna_extrabold"
            android:text="@string/santaColoma"
            android:textColor="@color/black"
            android:textSize="70sp"
            android:gravity="center"/>

        <ListView android:id="@+id/listaJugadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recyclerv_round"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="35dp">

        <!--TODO: seeButton-->
        <Button
            android:id="@+id/botonComeBackTeamA"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:textCursorDrawable="@drawable/ic_baseline_arrow_back_24" />

        <Button android:id="@+id/botonSiguienteTeamA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/siguiente"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>
</RelativeLayout>