<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".EquipoAFragment"
android:layout_width="match_parent"
android:layout_height="match_parent">

<include android:id="@+id/toolbarDone"
    layout="@layout/toolbar_done"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layout_marginTop="40dp"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/postnobillsjaffna_extrabold"
        android:text="@string/santaColoma"
        android:textColor="@color/black"
        android:textSize="70sp"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaJugadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/recyclerv_round" />

</LinearLayout>
</RelativeLayout>