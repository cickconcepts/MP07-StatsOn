<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:padding="16dp"
        android:orientation="vertical">

        <!--CRONOMETO-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--1a fila-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_green"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_f_recibida"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/f_recibida"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faltaRecibida"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_black"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_tiempo_m"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/black"
                    android:src="@drawable/time_out"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_tiempo_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tiempoM"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_black"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_cambio"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/black"
                    android:src="@drawable/cambio"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_cambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cambio"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_green"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_tapon"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/tapon"
                    android:scaleType="centerInside"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tapon"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <!--2a fila-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_green"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_three_point_more"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/three_points"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_three_point_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t3mas"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_green"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_two_point_more"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/two_shot"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_two_point_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t2mas"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_green"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_free_throw_more"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/free_throw"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_free_throw_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tlmas"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_red"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_perdida"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/perdida"
                    android:scaleType="centerInside"/>
                <TextView android:id="@+id/text_perdida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perdida"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <!--3a fila-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_red"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_three_point_less"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/three_point_red"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_three_point_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t3menos"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_red"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_two_point_less"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/two_shot_red"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_two_point_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t2menos"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_white_red"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_free_throw_less"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/white"
                    android:src="@drawable/free_throw_red"
                    android:scaleType="centerInside"/>

                <TextView android:id="@+id/text_free_throw_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tlmenos"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerv_round_black"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <ImageButton android:id="@+id/imagen_deshacer"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/black"
                    android:src="@drawable/curve_arrow"
                    android:scaleType="centerInside"/>
                <TextView android:id="@+id/text_dehacer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deshacer"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <!--equipos local-->
        <!--equipos visitante-->
    </LinearLayout>

    //toolbar
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="50dp">

        <ImageButton
            android:id="@+id/botonComeBackOpc"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@color/black"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <Button android:id="@+id/botonGuardarOpc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/guardar"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>

</RelativeLayout>