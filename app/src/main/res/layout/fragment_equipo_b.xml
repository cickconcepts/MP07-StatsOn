<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EquipoBFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layout_marginTop="35dp"
    android:orientation="vertical">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="@drawable/title_backgroud">

            <TextView android:id="@+id/tituloTeamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/postnobillsjaffna_extrabold"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="70sp" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/postnobillsjaffna_extrabold"
            android:text="@string/rosters"
            android:textSize="33sp"
            android:gravity="end|bottom"
            android:paddingTop="72dp"/>
    </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaJugadoresTeamB"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <Button android:id="@+id/botonanyadirjugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/anyadirjugador"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="50dp">

        <ImageButton
            android:id="@+id/botonComeBackTeamB"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@color/black"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <Button android:id="@+id/botonIniciarPartidoTeamB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/iniciarPartido"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>
</RelativeLayout>