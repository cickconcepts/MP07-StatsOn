<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListaPartidosFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_marginTop="35dp"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView android:id="@+id/tituloMiEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/partidos"
            android:fontFamily="@font/postnobillsjaffna_extrabold"
            android:textSize="75sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaPartidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:background="@drawable/recyclerv_round_white"/>

        <Button
            android:id="@+id/buttontooutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:minHeight="50dp">

        <ImageButton
            android:id="@+id/botonComeBackPartidos"
            android:layout_width="180dp"
            android:paddingStart="25dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </LinearLayout>
</RelativeLayout>