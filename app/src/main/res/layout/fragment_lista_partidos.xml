<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ListaPartidosFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_marginTop="35dp"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView android:id="@+id/tituloMiEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/partidos"
            android:fontFamily="@font/postnobillsjaffna_extrabold"
            android:textSize="75sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <ListView android:id="@+id/listaPartidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recyclerv_round"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:minHeight="35dp">

        <!--TODO: seeButton-->
        <Button
            android:id="@+id/botonComeBackPartidos"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:textCursorDrawable="@drawable/ic_baseline_arrow_back_24" />
    </LinearLayout>
</RelativeLayout>